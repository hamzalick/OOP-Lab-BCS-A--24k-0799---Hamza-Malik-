#include <iostream>
using namespace std;

class PetrolPump {
private:
    int pumpID;
    double litersFilled;
    static double pricePerLiter;

public:
    PetrolPump(int id, double liters) {
        pumpID = id;
        litersFilled = liters;
    }

    void printReceipt() {
        double total = litersFilled * pricePerLiter;
        cout << "Pump ID: " << pumpID << endl;
        cout << "Liters Filled: " << litersFilled << endl;
        cout << "Price per Liter: " << pricePerLiter << " PKR" << endl;
        cout << "Total Amount Due: " << total << " PKR" << endl;
    }
};

double PetrolPump::pricePerLiter = 270.50;

int main() {
    PetrolPump pump1(1, 10.5);
    PetrolPump pump2(2, 25.0);

    cout << "Receipt for Pump 1:" << endl;
    pump1.printReceipt();

    cout << "\nReceipt for Pump 2:" << endl;
    pump2.printReceipt();

    return 0;
}
